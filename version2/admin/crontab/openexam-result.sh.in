#!/bin/sh
# 
# Result directory maintenance script. The task should be run as web server
# to have correct permission set on generated files.
#
# Author: Anders LÃ¶vgren
# Date:   2016-04-20

# This script directory:
cwd="$(dirname $(realpath $0))"

# The phalcon directory:
root="$(realpath $cwd/../../phalcon-mvc)"

# Web server user:
user="apache"

# Script to run:
script="$root/script/openexam.php"

# Extra options:
#options="--verbose --force"

if ! [ -e $script ]; then
  echo "$0: missing script $script"
  exit 1
fi
if ! [ -d $root ]; then
  echo "$0: missing application directory $root"
  exit 1
fi

# Cleanup old result files:
/usr/bin/sudo -u $user /usr/bin/php $script --result --delete --days=90 $options $*

# Generate new result files:
/usr/bin/sudo -u $user /usr/bin/php $script --result --create --days=30 $options $*
